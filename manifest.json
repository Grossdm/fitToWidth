{
  "manifest_version": 2,
  "name": "Fit To Width",
  "applications": {
    "gecko": {
      "id": "@fittowidth"
    }
  },
  "version": "0.5.1",
  "description": "Fits text on most web pages to the width of your phone",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["fitToWidth.js", "run.js"],
      "run_at": "document_start"
    }
  ],
  "author": "Jarrad Whitaker"
}
